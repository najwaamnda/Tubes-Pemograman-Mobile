<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundColor"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_signin"
        android:text="Sign In"
        android:fontFamily="@font/bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        id="@+id/cardview_signin"
        android:layout_height="500dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/tv_signin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username_signin"
            android:text="Username/email"
            android:fontFamily="@font/bold"
            android:textSize="15sp"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_username"
            android:hint="username"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="40dp"
            android:paddingStart="10dp"
            android:background="@drawable/customedittext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/bold"
            android:id="@+id/tv_password"
            android:textSize="15sp"
            android:paddingStart="15dp"
            android:layout_marginTop="100dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_password"
            android:hint="password"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="10dp"
            android:background="@drawable/customedittext"
            android:layout_marginTop="125dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Cancel"
            android:id="@+id/button_cancel"
            android:fontFamily="@font/bold"
            android:layout_marginTop="190dp"
            android:backgroundTint="@color/black"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="@+id/cardview_signin"
            app:layout_constraintTop_toBottomOf="@id/et_password"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sign In"
            android:textColor="@color/black"
            android:id="@+id/button_signin"
            android:fontFamily="@font/bold"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginTop="190dp"
            android:layout_marginStart="195dp"
            app:layout_constraintEnd_toEndOf="@+id/cardview_signin"
            app:layout_constraintStart_toEndOf="@id/button_cancel"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="don't have an account?"
            android:fontFamily="@font/bold"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="350dp"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_logintosignup"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:fontFamily="@font/bold"
            android:textSize="20sp"
            android:layout_marginTop="400dp"
            android:textColor="@color/SignUpColor"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>