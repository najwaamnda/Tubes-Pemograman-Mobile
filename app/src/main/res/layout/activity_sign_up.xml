<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232931"
    android:orientation="vertical"
    tools:context=".SignUp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="542dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="24dp"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/bold"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/username"
            android:background="@drawable/customedittext"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="username"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="100dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/email"
            android:background="@drawable/customedittext"
            android:layout_marginTop="120dp"
            android:hint="email"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="180dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/password"
            android:background="@drawable/customedittext"
            android:layout_marginTop="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="passwordinput"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:drawableRight="@drawable/lock"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirm Password"
            android:fontFamily="@font/bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="255dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/passwordkonfirm"
            android:background="@drawable/customedittext"
            android:layout_marginTop="275dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="password"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:drawableRight="@drawable/lock"
            android:paddingEnd="10dp"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="335dp"
            android:layout_marginStart="210dp"
            android:text="Sign In"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:id="@+id/login_btn"
            android:textSize="16sp"
            android:background="@drawable/btn_sgn_background"
            app:cornerRadius="10dp"

            />

        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="335dp"
            android:layout_marginStart="30dp"
            android:text="Cancel"
            android:fontFamily="@font/bold"
            android:id="@+id/cancel_btn"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="don't have a account?"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:layout_marginTop="400dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login"
            android:id="@+id/textViewSignUp"
            android:fontFamily="@font/black"
            android:textColor="@color/SignUpColor"
            android:textAlignment="center"
            android:layout_marginTop="430dp"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:clickable="true"
            android:focusable="true"/>



    </androidx.cardview.widget.CardView>

</LinearLayout>