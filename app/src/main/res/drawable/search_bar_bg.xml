<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:bottom="6dp" android:left="2dp" android:right="2dp"> <!-- Adjust offset for realistic shadow -->
        <shape>
            <solid android:color="#20000000" /> <!-- Lighter shadow (20% black) -->
            <corners android:radius="24dp" /> <!-- Corner radius for shadow -->
        </shape>
    </item>

    <!-- Main Layer -->
    <item>
        <shape>
            <solid android:color="#CECECE" /> <!-- Main background color -->
            <corners android:radius="24dp" /> <!-- Match the shadow's radius -->
        </shape>
    </item>
</layer-list>
